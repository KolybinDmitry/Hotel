<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="AuthorizationDataGrid"/>
        <TextBox x:Name="LoginBx"   Grid.Row="0" HorizontalAlignment="Left" Margin="227,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="514" Height="35" />
        <TextBlock HorizontalAlignment="Left" Margin="178,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="44"><Run Language="ru-ru" Text="Логин"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="178,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" Height="31"><Run Language="ru-ru" Text="Пароль:"/></TextBlock>
        <PasswordBox Grid.Row="1" x:Name="PasswordBx" HorizontalAlignment="Left" Margin="232,195,0,0" VerticalAlignment="Top" Width="509" Height="40"/>
        <Button Grid.Row="2" x:Name="AuthorizationButton" Content="Авторизироваться" HorizontalAlignment="Left" Margin="250,337,0,0" VerticalAlignment="Top" Height="47" Width="406" Click="AuthorizationButton_Click"/>

    </Grid>
</Window>
